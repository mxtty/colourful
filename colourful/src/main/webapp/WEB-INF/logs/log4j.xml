<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE log4j:configuration PUBLIC "-//APACHE//DTD LOG4J 1.2//EN" "log4j.dtd">
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">

	<!-- Appenders -->
	<appender name="console" class="org.apache.log4j.ConsoleAppender">
        <param name="Threshold" value="debug" />
		<param name="Target" value="System.out" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%-5p: %c - %m%n" />
		</layout>
	</appender>

	
	<appender name="appFileAppender" class="org.apache.log4j.RollingFileAppender">
	     <param name="Threshold" value="DEBUG" />
	     <param name="MaxFileSize" value="128MB" />
	     <param name="Append" value="true" />
	     <param name="MaxBackupIndex" value="10" />
<!-- 	     <param name="File" value="${webapp.dir}/WEB-INF/logs/applog.log"/> -->
 	     <param name="File" value="C:/Users/WangQi/git/colourful/colourful/src/main/webapp/WEB-INF/logs/applog.log"/>
	     <layout class="org.apache.log4j.PatternLayout">
         <param name="ConversionPattern" value="%d  %-5p  [%c{1}] %m %n" />  
	     </layout>
	</appender>
	
		
	<appender name="sysFileAppender" class="org.apache.log4j.RollingFileAppender">
	     <param name="Threshold" value="DEBUG" />
	     <param name="MaxFileSize" value="128MB" />
	     <param name="Append" value="true" />
	     <param name="MaxBackupIndex" value="10" />
<!-- 	     <param name="File" value="${webapp.dir}/WEB-INF/logs/syslog.log"/> -->
	     <param name="File" value="C:/Users/WangQi/git/colourful/colourful/src/main/webapp/WEB-INF/logs/syslog.log"/>
	     <layout class="org.apache.log4j.PatternLayout">
         <param name="ConversionPattern" value="%d  %-5p  [%c{1}] %m %n" />  
	     </layout>
	</appender>
	
	<!-- Application Loggers -->
	<logger name="SysLogger">
	  <level value="error" />
      <appender-ref ref="sysFileAppender" />
	</logger>
	
	<logger name="AppLogger">
	  <level value="info" />
      <appender-ref ref="appFileAppender" />
	</logger>

	<!-- 3rdparty Loggers -->


    <logger name="java.sql.PreparedStatement">
             <level value="debug"/>
             <appender-ref ref="sysFileAppender" />
    </logger>

	 <logger name="org.apache.ibatis">
	       <level value="debug"       />
		<appender-ref ref="sysFileAppender" />
	  </logger>
	
	  <logger name="java.sql">
	       <level value="debug"       />
		<appender-ref ref="sysFileAppender" />
	  </logger>
	
	  <logger name="java.sql.Statement">
	       <level value="debug"       />
		<appender-ref ref="sysFileAppender" />
	  </logger>

	<!-- Root Logger -->
	<root>
		<priority value="error" />
		<appender-ref ref="console" />
	</root>
	
</log4j:configuration>
